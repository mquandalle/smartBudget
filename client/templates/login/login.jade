// client/templates/login/login.jade

template(name="login")
  #fullscreen_bg
    .container.vertical-middle
      form#login
        .row
          h1.white.text-center.font-5 smartBudget
          .col-xs-10.col-sm-6.col-md-4.col-xs-offset-1.col-sm-offset-3.col-md-offset-4
            input#email.font-1-5.form-control(type="email", placeholder="Email address")
            input#password.font-1-5.form-control(type="password", placeholder="Password")
            input.font-1-5.btn.btn-primary.btn-block(type="submit", value="Sign In")
            p.white.font-2: em #{errorMessage}